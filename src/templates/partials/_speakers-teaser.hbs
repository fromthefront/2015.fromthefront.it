<section class="l-speaker-teaser">
  <h2 class="l-speaker-teaser__title">
    {{site.speaker_teaser_intro}}
  </h2>
  <ul class="l-speaker-teaser__list">

    {{#withSort speakers.list "name"}}
      <li class="l-speaker-teaser__item">
        {{> _speaker}}
      </li>
    {{/withSort}}

  </ul>

  <p class="l-speaker-teaser__smallprint margin-top-half">
    {{site.speaker_teaser_outro}}
  </p>

</section>
