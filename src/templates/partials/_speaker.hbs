<article class="m-speaker">
  <a
    {{#if bio}}
      href="./speakers.html#{{hyphenate (lowercase name) }}"
    {{else}}
      href="http://twitter.com/{{twitter}}"
    {{/if}} >
    <div class="m-speaker__img {{hyphenate (lowercase name) }}">
    </div>
  </a>
  <div class="m-speaker__inner">
    <h2 class="m-speaker__name">
      {{name}}
    </h2>
    {{#if shortinfo}}
    <p class="m-speaker__shortinfo">
      {{shortinfo}}
    </p>
    {{/if}}
    <a href="http://twitter.com/{{twitter}}" class="m-speaker__twitter">
      @{{twitter}}
    </a>
  </div>
</article>
