---
layout: ./src/templates/layouts/default.hbs
title: <%= name %>
---
<a href="../" class="o-topbar">
  {{site.topbar}}
</a>

<article class="l-page">
  <div class="l-page__main l-page__main--large">
    <header class="l-page__header">
      <h1 class="l-page__title">
        {{site.speaker_page_title}}
      </h1>
      <a href="#tickets" class="l-page__subtitle">
        {{site.call_to_action}}!
      </a>
    </header>
    <article class="m-speaker-page">
      <section class="m-speaker-page__info">
        <header class="m-speaker-page__header">
          <p class="m-speaker-page__pre-title">
            Introducing
          </p>
          <h1 class="m-speaker-page__title">
            {{name}}
          </h1>
          <a href="http://twitter.com/{{twitter}}" class="m-speaker-page__twitter">@{{twitter}}</a>
        </header>
        <div class="m-speaker-page__avatar">
          {{#if img}}
            <img src="{{page.assets}}/images/{{img}}" alt="A photo of {{name}}" class="m-speaker-page__img">
          {{else}}
            <img src="{{page.assets}}/images/{{hyphenate (lowercase name) }}.jpg"alt="A photo of {{name}}" class="m-speaker-page__img">
          {{/if}}
        </div>
      </section>
      <div class="m-speaker-page__main">
        <section class="m-speaker-page__bio">
          <p class="m-speaker-page__text">
            {{bio}}
          </p>
        </section>

        {{#if talk-abstract}}
        <section class="m-speaker-page__talk">
          <h2 class="m-speaker-page__talk-title">
            {{talk-title}}
          </h2>
          <p class="m-speaker-page__text">
            {{talk-abstract}}
          </p>
        </section>
        {{/if}}
      </div>
    </article>
  </div>
</article>
{{> _tickets}}
